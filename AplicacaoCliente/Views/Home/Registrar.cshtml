@model EmpresaModel
<h2>Registrar Empresa</h2>

@{ 
    var id = string.Empty;
    var nome = string.Empty;
    var site = string.Empty;
    var quantidadeFuncionario = string.Empty;
   

    try
    {
        id = ViewBag.Registro.Id.ToString();
        nome = ViewBag.Registro.Nome.ToString();
        site = ViewBag.Registro.Site.ToString();
        quantidadeFuncionario = ViewBag.Registro.QuantidadeFuncionario.ToString();
    }
    catch
    {


    }
}

<form asp-controller="Home" asp-action="Registrar">
    <input asp-for="Id" class="form-control" value="@id" type="hidden" />
    <div class="row">
        <div class="col-lg-3">
            <label>Nome</label>
            <input asp-for="Nome" class="form-control" value="@nome" />
        </div>

        <div class="col-lg-3">
            <label>Site</label>
            <input asp-for="Site" class="form-control" value="@site" />
        </div>

        <div class="col-lg-3">
            <label>Quantidade de Funcionário</label>
            <input asp-for="QuantidadeFuncionario" class="form-control" value="@quantidadeFuncionario"/>
        </div>
      
    </div>
    <br /><br />
    <button type="submit" class="btn btn-block btn-success" onclick="registrar()">Registrar Empresa</button>
</form>